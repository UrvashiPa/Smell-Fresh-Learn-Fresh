    <div id="result" class="result" style="display:none"></div>
  </div>

  <script>
    const submitBtn = document.getElementById('submitBtn');
    const resetBtn = document.getElementById('resetBtn');
    const resultBox = document.getElementById('result');

    function calculateResult(){
      const counts = {V:0, A:0, R:0, K:0};
      for(let i=1;i<=10;i++){
        const sel = document.querySelector('input[name="q'+i+'"]:checked');
        if(sel) counts[sel.value]++;
      }
      return counts;
    }

    function describeStyle(type){
      const descriptions = {
        V: {
          title: 'Visual Learner',
          text: 'You learn best with images, charts, and colours. Try mind maps, diagrams, and flashcards to remember new ideas.',
          tips: ['Use diagrams and colour notes','Watch videos and picture examples','Make mind maps and charts']
        },
        A: {
          title: 'Auditory Learner',
          text: 'You learn best by listening and speaking. Try audio lessons, repeating aloud, and group discussions.',
          tips: ['Listen to recordings and podcasts','Read aloud and discuss with friends','Record your notes and replay them']
        },
        R: {
          title: 'Reading/Writing Learner',
          text: 'You learn best by reading and writing. Try lists, summaries, and written explanations to learn clearly.',
          tips: ['Write notes and summaries','Read textbooks and articles','Use lists and written exercises']
        },
        K: {
          title: 'Kinesthetic Learner',
          text: 'You learn best by doing and moving. Try role-play, experiments, and hands-on practice to remember well.',
          tips: ['Practice with activities and role-plays','Use gestures and real objects','Take short breaks and move while learning']
        }
      };
      return descriptions[type];
    }

    function showResult(){
      const counts = calculateResult();
      const entries = Object.entries(counts);
      const max = Math.max(...entries.map(e=>e[1]));
      // find winners
      const winners = entries.filter(e=>e[1]===max).map(e=>e[0]);

      if(max===0){
        resultBox.style.display='block';
        resultBox.innerHTML = '<strong>Please answer all questions.</strong> Select one option for each question.';
        return;
      }

      // build result content
      let html = '<h3>Your Learning Style Result</h3>';
      if(winners.length===1){
        const type = winners[0];
        const info = describeStyle(type);
        html += `<p><strong>${info.title}</strong></p>`;
        html += `<p>${info.text}</p>`;
        html += '<p><strong>Quick Study Tips:</strong></p><ul>' + info.tips.map(t=>`<li>${t}</li>`).join('') + '</ul>';
      } else {
        // tie case
        html += '<p>You have a <strong>mixed learning style</strong>. You scored equally in these styles:</p><ul>';
        winners.forEach(w=>{
          const info = describeStyle(w);
          html += `<li><strong>${info.title}</strong> — ${info.text}</li>`;
        });
        html += '</ul>';
        html += '<p>Try mixing methods: combine visuals, audio, writing and hands-on practice for better learning.</p>';
      }

      // show counts summary
      html += '<hr><p><strong>Score summary:</strong></p><ul>' +
        Object.keys(counts).map(k=>{
          const map = {V:'Visual',A:'Auditory',R:'Reading/Writing',K:'Kinesthetic'};
          return `<li>${map[k]}: ${counts[k]}</li>`;
        }).join('') + '</ul>';

      // share button
      html += '<div style="margin-top:8px;display:flex;gap:8px;flex-wrap:wrap;align-items:center">'
        + '<button id="copyBtn" style="background:var(--accent);color:#fff;border:0;padding:8px 10px;border-radius:8px;cursor:pointer">Copy Result</button>'
        + '<button id="restartBtn" class="secondary" style="background:#fff;border:1px solid #e6eef8;color:var(--accent);padding:8px 10px;border-radius:8px;cursor:pointer">Try Again</button>'
        + '</div>';

      resultBox.style.display='block';
      resultBox.innerHTML = html;

      document.getElementById('copyBtn').addEventListener('click',()=>{
        const map = {V:'Visual',A:'Auditory',R:'Reading/Writing',K:'Kinesthetic'};
        const winnerText = winners.map(w=>map[w]).join(', ');
        const shareText = `My learning style: ${winnerText}. Scores - Visual:${counts.V}, Auditory:${counts.A}, Reading/Writing:${counts.R}, Kinesthetic:${counts.K}.`;
        navigator.clipboard?.writeText(shareText).then(()=>{
          alert('Result copied to clipboard! You can paste it in your post or share it.');
        }).catch(()=>alert('Could not copy.')); 
      });

      document.getElementById('restartBtn').addEventListener('click',resetForm);
    }

    function resetForm(){
      document.getElementById('pollForm').reset();
      resultBox.style.display='none';
      resultBox.innerHTML='';
    }

    submitBtn.addEventListener('click',showResult);
    resetBtn.addEventListener('click',resetForm);
  </script>
</body>
</html>
