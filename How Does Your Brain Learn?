    body{background:linear-gradient(180deg,#eef2ff 0%, #f8fafc 100%);margin:0;padding:20px;display:flex;justify-content:center}
    .container{max-width:760px;width:100%;background:var(--card);border-radius:10px;padding:20px 22px;box-shadow:0 6px 18px rgba(16,24,40,0.06)}
    h1{margin:0 0 6px 0;font-size:22px}
    p.lead{margin:0 0 18px 0;color:var(--muted)}
    form{display:grid;gap:14px}
    .q{background:#fbfdff;border:1px solid #eef2ff;padding:12px;border-radius:8px}
    .q h3{margin:0 0 8px 0;font-size:15px}
    .options{display:flex;flex-wrap:wrap;gap:8px}
    label.option{flex:1 1 48%;background:#fff;border:1px solid #e6eef8;padding:10px;border-radius:8px;cursor:pointer;display:flex;align-items:center;gap:10px}
    input[type=radio]{accent-color:var(--accent)}
    .controls{display:flex;gap:8px;margin-top:10px}
    button{background:var(--accent);color:#fff;border:0;padding:10px 12px;border-radius:8px;cursor:pointer}
    button.secondary{background:#fff;border:1px solid #e6eef8;color:var(--accent)}
    .result{margin-top:16px;padding:14px;border-radius:8px;background:linear-gradient(90deg,#f8fafc,#fff);border:1px solid #eef2ff}
    .badge{display:inline-block;padding:6px 10px;border-radius:999px;background:var(--accent-2);color:#fff;font-weight:600;margin-top:8px}
    small{color:var(--muted)}
    @media (max-width:520px){label.option{flex:1 1 100%}}
  </style>
